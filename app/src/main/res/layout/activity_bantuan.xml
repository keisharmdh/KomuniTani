<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_bantuan_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bantuan"
        android:textSize="24sp"
        android:fontFamily="@font/plus_jakarta_semibold"
        android:textColor="@color/hijau1"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bantuan_title"
        app:layout_constraintBottom_toTopOf="@id/btn_hubungi_kami"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions (FAQ)"
                android:fontFamily="@font/plus_jakarta_semibold"
                android:textSize="20sp"
                android:textColor="@color/hijau2"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q: Bagaimana cara menggunakan aplikasi ini?"
                android:fontFamily="@font/plus_jakarta_reg"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Anda dapat mulai dengan mendaftar akun, kemudian masuk dan menjelajahi fitur-fitur seperti posting pertanyaan atau informasi."
                android:fontFamily="@font/plus_jakarta_reg"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q: Bagaimana cara menghubungi dukungan?"
                android:fontFamily="@font/plus_jakarta_reg"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Anda dapat menghubungi kami melalui email di support@komunitani.com atau melalui WhatsApp kami di nomor +62xxxxxxxx."
                android:fontFamily="@font/plus_jakarta_reg"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_hubungi_kami"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Hubungi Kami"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
