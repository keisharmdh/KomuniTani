<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F8E6">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#F9FFDB"
        android:padding="16dp">

        <ImageView
            android:layout_width="129dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:src="@drawable/letter" />

    </RelativeLayout>



    <!-- Search Bar -->
    <RelativeLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/topBar"
        android:layout_margin="16dp"
        android:background="@drawable/search_bar_background">

        <!-- Icon Search -->
        <ImageView
            android:id="@+id/iconSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/search"
            android:contentDescription="Search Icon"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"/>

        <!-- Input Text -->
        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/iconSearch"
            android:layout_toRightOf="@id/iconSearch"
            android:layout_marginEnd="8dp"
            android:hint="Apa yang Anda ingin tanyakan dan berikan?"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColorHint="@color/black"
            android:textSize="12sp"
            android:gravity="center_vertical"/>

        <!-- Icon Filter -->
        <ImageView
            android:id="@+id/iconFilter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/filter"
            android:contentDescription="Filter Icon"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"/>
    </RelativeLayout>




    <!-- Recent Searches -->

    <TextView
        android:id="@+id/recentSearches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Pencarian Terbaru"
        android:textColor="#000"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/recentSearchButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recentSearches"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <!-- Recent Search Buttons -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/search_button"
            android:backgroundTint="@null"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Bagaimana cara mengatasi hama"
            android:textColor="#000"
            android:textSize="10sp"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/search_button"
            android:backgroundTint="@null"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Bagaimana cara mengatasi hama"
            android:textColor="#000"
            android:textSize="10sp"
            android:textAllCaps="false"/>



    </LinearLayout>

    <!-- Topics Section -->
    <TextView
        android:id="@+id/topicsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recentSearchButtons"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Topik - topik untuk Anda"
        android:textColor="#000"
        android:textSize="16sp" />

    <!-- Topic Suggestions Grid -->

    <!-- Footer Navigation (optional) -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="228dp"
        android:layout_below="@id/topicsHeader"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:columnCount="4">

        <!-- Topic Chips -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/search_button"
            android:text="Hama"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/search_button"
            android:text="Hama"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/search_button"
            android:text="Hama"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/search_button"
            android:text="Hama"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/search_button"
            android:text="Hama"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/search_button"
            android:text="Hama"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/search_button"
            android:text="Hama"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/search_button"
            android:text="Hama"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/search_button"
            android:text="Hama"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="14sp" />

        <!-- Add more topic buttons as needed -->
    </GridLayout>

    <!-- Footer Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:menu="@menu/buttom_nav_menu" />
    </LinearLayout>
</RelativeLayout>
