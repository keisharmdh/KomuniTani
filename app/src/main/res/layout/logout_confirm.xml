<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_gravity="center"
    android:background="@drawable/logout_confirm">
    <TextView
        android:id="@+id/confirm_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Apakah anda yakin ingin logout?"
        android:fontFamily="@font/plus_jakarta_reg"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_batal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batal"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/plus_jakarta_semibold"
            android:textColor="@color/hijau1"
            android:background="@drawable/rounded_button_white"
            android:layout_marginRight="30dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/plus_jakarta_semibold"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



