<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State ketika tombol ditekan -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Bayangan -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#B3B3B3" /> <!-- Warna bayangan -->
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Latar belakang tombol -->
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/abumuda" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- State ketika tombol dipilih -->
    <item android:state_selected="true">
        <layer-list>
            <!-- Bayangan -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#B3B3B3" /> <!-- Warna bayangan -->
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Latar belakang tombol -->
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/abumuda" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- State default -->
    <item>
        <layer-list>
            <!-- Bayangan -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#B3B3B3" /> <!-- Warna bayangan -->
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Latar belakang tombol -->
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
